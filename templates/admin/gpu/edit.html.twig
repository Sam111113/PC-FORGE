{% extends 'base.html.twig' %}

{% block title %}Modifier la carte graphique - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier la carte graphique</h1>

			{{ include('admin/gpu/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

			<div>
				<a href="{{ path('app_admin_gpu_index') }}">Retour à la liste</a>

				<form method="post" action="{{ path('app_admin_gpu_delete', {'id': gpu.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette carte graphique ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gpu.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
