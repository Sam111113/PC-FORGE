{% extends 'base.html.twig' %}

{% block title %}Modifier le ventilateur - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier le ventilateur</h1>
			{{ include('admin/fan/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			<div>
				<a href="{{ path('app_admin_fan_index') }}">Retour à la liste</a>
				<form method="post" action="{{ path('app_admin_fan_delete', {'id': fan.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce ventilateur ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fan.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
