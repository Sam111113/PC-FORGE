{% extends 'base.html.twig' %}

{% block title %}Gestion du stockage - Admin{% endblock %}

{% block main %}
	<main class="main-show">
{% include "admin/part/adminNav.html.twig" %}
		<h1>Gestion du stockage</h1>
		<a href="{{ path('app_admin_storage_new') }}" class="btn">Créer un nouveau stockage</a>
		<div class="table-div">
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Marque</th>
						<th>Modèle</th>
						<th>Prix (€)</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for storage in storages %}
						<tr>
							<td>{{ storage.id }}</td>
							<td>{{ storage.marque }}</td>
							<td>{{ storage.modele }}</td>
							<td>{{ storage.prix }}</td>
							<td>
								<a href="{{ path('app_admin_storage_edit', {'id': storage.id}) }}" aria-label="Modifier {{ storage.marque }} {{ storage.modele }}">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil-icon lucide-pencil" role="img" aria-hidden="true"><path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z"/><path d="m15 5 4 4"/></svg>
								</a>
								<form method="post" action="{{ path('app_admin_storage_delete', {'id': storage.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce stockage ?');" style="display:inline;">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ storage.id) }}">
									<button class="btn" style="background:none;border:none;padding:0;" aria-label="Supprimer {{ storage.marque }} {{ storage.modele }}">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#e5676e" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2" role="img" aria-hidden="true"><path d="M10 11v6"/><path d="M14 11v6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/><path d="M3 6h18"/><path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
									</button>
								</form>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Aucun stockage trouvé</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
{% endblock %}
