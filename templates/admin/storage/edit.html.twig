{% extends 'base.html.twig' %}

{% block title %}Modifier le stockage - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier le stockage</h1>
			{{ include('admin/storage/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			<div>
				<a href="{{ path('app_admin_storage_index') }}">Retour à la liste</a>
				<form method="post" action="{{ path('app_admin_storage_delete', {'id': storage.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce stockage ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ storage.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
