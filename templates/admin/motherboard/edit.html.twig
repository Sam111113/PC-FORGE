{% extends 'base.html.twig' %}

{% block title %}Modifier la carte mère - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier la carte mère</h1>
			{{ include('admin/motherboard/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			<div>
				<a href="{{ path('app_admin_motherboard_index') }}">Retour à la liste</a>
				<form method="post" action="{{ path('app_admin_motherboard_delete', {'id': motherboard.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette carte mère ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ motherboard.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
