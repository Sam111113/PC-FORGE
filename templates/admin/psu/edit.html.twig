{% extends 'base.html.twig' %}

{% block title %}Modifier l'alimentation - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier l'alimentation</h1>
			{{ include('admin/psu/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			<div>
				<a href="{{ path('app_admin_psu_index') }}">Retour à la liste</a>
				<form method="post" action="{{ path('app_admin_psu_delete', {'id': psu.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette alimentation ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ psu.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
