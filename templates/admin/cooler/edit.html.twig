{% extends 'base.html.twig' %}

{% block title %}Modifier le système de refroidissement - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier le système de refroidissement</h1>
			{{ include('admin/cooler/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			<div>
				<a href="{{ path('app_admin_cooler_index') }}">Retour à la liste</a>
				<form method="post" action="{{ path('app_admin_cooler_delete', {'id': cooler.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce système de refroidissement ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cooler.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
