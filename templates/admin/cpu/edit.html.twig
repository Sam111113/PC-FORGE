{% extends 'base.html.twig' %}

{% block title %}Modifier le processeur - Admin{% endblock %}

{% block main %}
	<main class="main-form">
		<section>
			<h1>Modifier le processeur</h1>

			{{ include('admin/cpu/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

			<div>
				<a href="{{ path('app_admin_cpu_index') }}">Retour à la liste</a>

				<form method="post" action="{{ path('app_admin_cpu_delete', {'id': cpu.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce processeur ?');">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cpu.id) }}">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
