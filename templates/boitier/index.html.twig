{% extends 'base.html.twig' %}

{% block title %}Boitier
{% endblock %}

{% block main %}
	<main>
		<h1 class="titre-main-page">Boitier</h1>

		<section class="compo-index">
			{% for boitier in boitiers %}
				<article class="compo-card" data-ascin="{{ boitier.ascin }}">
					<div>
						<div class="compo-card-img">
							<img src="" alt="Image de boitier">
						</div>
						<div>
							<p>{{boitier.marque}}
								{{boitier.modele}}</p>
							<p class="compo-card-price">{{boitier.prix}} â‚¬</p>
							<p class="compo-card-note"> </p>
							<a class="compo-card-revendeur" href="">Amazon</a>
						</div>
						{% if build ?? false %}
							{% if build.boitierId is empty or null and (build.psuId is not empty or build.psuId is not null) %}
								<form method="post" action="{{ path('forge_add_boitier', { id: boitier.id }) }}">
									<input type="hidden" name="_token" value="{{ csrf_token('add_boitier_' ~ boitier.id) }}">
									<button class="btn" aria-label="Ajouter {{ boitier.marque }} {{ boitier.modele }} au build">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-plus-icon lucide-circle-plus" role="img" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
									</button>
								</form>
							{% endif %}
						{% endif %}
					</div>
					<div>
						<p>Longueur : 
							{{ boitier.length }}
							mm</p>
						<p>Largeur : 
							{{ boitier.width }}
							mm</p>
						<p>Hauteur : 
							{{ boitier.heigth }}
							mm</p>
						<p>Emplacement de ventilateur : 
							{{ boitier.fanSlot }}</p>
					</div>
				</article>
			{% else %}
				<p>Aucun processeur trouver</p>
			{% endfor %}
		</section>
	</main>
{% endblock %}
