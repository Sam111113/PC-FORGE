{% extends 'base.html.twig' %}

{% block title %}Carte graphique{% endblock %}

{% block main %}
	<main>
		<h1 class="titre-main-page">Carte graphique</h1>

		<section class="compo-index">
			{% for gpu in gpus %}
				<article class="compo-card" data-ascin="{{ gpu.ascin }}">
					<div>
						<div class="compo-card-img">
							<img src="" alt="Image de carte graphique">
						</div>
						<div>
							<p>{{gpu.marque}} {{gpu.modele}}</p>
							<p class="compo-card-price">{{gpu.prix}} €</p>
							<p class="compo-card-note"></p>
							<a class="compo-card-revendeur" href="">Amazon</a>
						</div>
						{% if build ?? false %}
							{% if build.gpuId is empty or null and (build.mbId is not empty or build.mbuId is not null) %}
								<form method="post" action="{{ path('forge_add_gpu', { id: gpu.id }) }}">
									<input type="hidden" name="_token" value="{{ csrf_token('add_gpu_' ~ gpu.id) }}">
									<button class="btn" aria-label="Ajouter {{ gpu.marque }} {{ gpu.modele }} au build">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-plus-icon lucide-circle-plus" role="img" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
									</button>
								</form>
							{% endif %}
						{% endif %}
					</div>
					<div>
						<p>Module PCie : {{ gpu.pcieModule }}</p>
						<p>Longueur : {{ gpu.length}} mm</p>
						<p>Tdp : {{ gpu.tdp }} W</p>
					</div>
				</article>
			{% else %}
				<p>Aucune carte graphique trouvée</p>
			{% endfor %}
		</section>
	</main>
{% endblock %}
