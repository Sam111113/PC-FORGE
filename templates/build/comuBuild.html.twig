{% extends "base.html.twig" %}
{% block title %}Communauté
{% endblock %}
{% block main %}
	<main>
		<h1 class="titre-main-page">Les Build de la comu</h1>
		<section class="section-comu">
			{% for b in pagination %}
				<article class="build-card">
							<div>
								{% if b.name ?? false %}
									<h3>Build
										{{ b.name }}</h3>
								{% else %}
									<h3>Build
										{{ b.cpu.marque }}</h3>
								{% endif %}
								<div><img src="{{ b.image ? vich_uploader_asset(b.image, 'imageFile') : asset('img/placeholder/prebuild.png') }}" alt="Build"></div>
								<a href="{{ path('app_build_show', {id: b.id}) }}">Consulter</a>
							</div>
							<div>
								<div>
								<h3>Processeur :</h3>
									<p>{{ b.cpu.marque }}
										{{ b.cpu.modele }}</p>
								</div>

								{% for gpu in b.gpu %}
									<div>
									<h3>Carte graphique :</h3>
										<p>{{ gpu.marque }}
											{{ gpu.modele }}</p>
									</div>
								{% endfor %}
								<div>
								<h3>Prix total :</h3>
									<p>{{ b.totalPrice }}</p>
								</div>
								<div>
								Créer le :
									<p>{{ b.createdAt|date('d/m/Y') }}</p>
								</div>
							</div>
						</article>
			{% endfor %}
		</section>
		{{ knp_pagination_render(pagination) }}
	</main>
{% endblock %}
