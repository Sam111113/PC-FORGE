{% extends 'base.html.twig' %}

{% block title %}Ram
{% endblock %}

{% block main %}
	<main>
		<h1 class="titre-main-page">RAM</h1>

		<section class="compo-index">
			{% for ram in rams %}
				<article class="compo-card" data-ascin="{{ ram.ascin }}">
					<div>
						<div class="compo-card-img">
							<img src="" alt="Image de mémoire">
						</div>
						<div>
							<p>{{ram.marque}}
								{{ram.modele}}</p>
							<p class="compo-card-price">{{ram.prix}} €</p>
							<p class="compo-card-note"> </p>
							<a class="compo-card-revendeur" href="">Amazon</a>
						</div>
						{% if build ?? false %}
							{% if build.gpuId and (build.ramId is empty or null) %}
								<form method="post" action="{{ path('forge_add_ram', { id: ram.id }) }}">
									<input type="hidden" name="_token" value="{{ csrf_token('add_ram_' ~ ram.id) }}">
									<button class="btn" aria-label="Ajouter {{ ram.marque }} {{ ram.modele }} au build">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-plus-icon lucide-circle-plus" role="img" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
									</button>
								</form>
							{% endif %}
						{% endif %}
					</div>
					<div>
						<p>Type de mémoire : 
							{{ ram.type }}</p>
						<p>Nombre de module : 
							{{ ram.nbModule}}</p>
						<p>Total GB : 
							{{ ram.total }}
							GB</p>
					</div>
				</article>
			{% else %}
				<p>Aucune RAM trouver</p>
			{% endfor %}
		</section>
	</main>
{% endblock %}
