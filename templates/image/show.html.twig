{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block main %}
<main>
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ image.filename }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ image.context }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ image.updatedAt ? image.updatedAt|date('d/m/Y H:i'): '-' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index') }}">back to list</a>

    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
    </main>
{% endblock %}
