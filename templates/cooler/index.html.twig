{% extends 'base.html.twig' %}

{% block title %}Cooler
{% endblock %}

{% block main %}
	<main>
		<h1 class="titre-main-page">Cooler</h1>

		<section class="compo-index">
			{% for cooler in coolers %}
				<article class="compo-card" data-ascin="{{ cooler.ascin }}">
					<div>
						<div class="compo-card-img">
							<img src="" alt="Image de système de refroidissement">
						</div>
						<div>
							<p>{{cooler.marque}}
								{{cooler.modele}}</p>
							<p class="compo-card-price">{{cooler.prix}} €</p>
							<p class="compo-card-note"> </p>
							<a class="compo-card-revendeur" href="">Amazon</a>
						</div>
						{% if build ?? false %}
							{% if build.storageId and (build.coolerId is empty or null) %}
								<form method="post" action="{{ path('forge_add_cooler', { id: cooler.id }) }}">
									<input type="hidden" name="_token" value="{{ csrf_token('add_cooler_' ~ cooler.id) }}">
									<button class="btn" aria-label="Ajouter {{ cooler.marque }} {{ cooler.modele }} au build">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-plus-icon lucide-circle-plus" role="img" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>
									</button>
								</form>
							{% endif %}
						{% endif %}
					</div>
					<div>
						<p>Nombre de ventilateur : 
							{{ cooler.nbFan }}</p>
						<p>Tdp : 
							{{ cooler.tdp}} W</p>
						<p>Socket : 
							{{ cooler.socket }}</p>
					</div>
				</article>
			{% else %}
				<p>Aucun cooler trouver</p>
			{% endfor %}
		</section>
	</main>
{% endblock %}
