{% block footer %}
	<footer>
		<a href="{{ path('app_home') }}">
			<img src="{{ asset('img/logo.png') }}" alt="Logo PC Forge">
		</a>
		<div>
			<h2>Pc Forge</h2>
			<ul>
				<li><a href="{{ path('app_forge') }}">Forge</a></li>
				<li><a href="{{ path('app_build_comu') }}">Communauté</a></li>
				<li><a href="{{ path('app_prebuilds') }}">Pré-builds</a></li>
				<li><a href="{{ path('app_news_index') }}">News</a></li>
			</ul>
		</div>
		<div>
			<h2>Composants</h2>
			<ul>
				<li><a href="{{ path('app_cpu_index') }}">Processeur</a></li>
				<li><a href="{{ path('app_motherboard_index') }}">Carte mère</a></li>
				<li><a href="{{ path('app_gpu_index') }}">Carte graphique</a></li>
				<li><a href="{{ path('app_ram_index') }}">Ram</a></li>
				<li><a href="{{ path('app_storage_index') }}">stockage</a></li>
				<li><a href="{{ path('app_psu_index') }}">Alimentation</a></li>
				<li><a href="{{ path('app_cooler_index') }}">Refroidissement</a></li>
				<li><a href="{{ path('app_boitier_index') }}">Boîtier</a></li>
				<li><a href="{{ path('app_fan_index') }}">Ventilateur</a></li>
			</ul>
		</div>
		<div>
			<h2>Compte</h2>
			<ul>
				{% if app.user %}
					<li>
						<a href="{{ path('app_profile', {'id': app.user.id}) }}">Profil</a>
					</li>
					<li>
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li>
							<a href="{{ path('app_admin_user_index') }}">Admin</a>
						</li>
					{% elseif is_granted('ROLE_REDACTEUR')%}
						<li>
							<a href="{{ path('app_admin_news_index') }}">Rédacteur</a>
						</li>
					{% endif %}
				{% else %}
					<li>
						<a href="{{ path('app_login') }}">Connexion</a>
					</li>
					<li>
						<a href="{{ path('app_register') }}">Inscription</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</footer>
{% endblock %}
